{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strictPropertyInitialization": false,
        "rootDir": "src",
        "outDir": "nova",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}