{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "target": "es2022",
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
        "isolatedModules": true,
        "noEmit": true,
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true 
    },
    "include": ["src"],
    "exclude": ["node_modules", "./src/container/**"]
}